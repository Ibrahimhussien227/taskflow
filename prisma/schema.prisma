datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id        String   @id @default(cuid())
  name      String
  status    String
  startDate DateTime
  endDate   DateTime
  progress  Int
  budget    Int

  // ✅ Relation: one project → many tasks
  tasks     Task[]   @relation("ProjectTasks")

  createdAt DateTime @default(now())
  updatedAt DateTime @default(now()) @updatedAt
}

model Task {
  id          String   @id @default(cuid())
  name        String
  status      String
  priority    String
  assignedTo  String
  projectId   String
  project     Project  @relation("ProjectTasks", fields: [projectId], references: [id])

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
